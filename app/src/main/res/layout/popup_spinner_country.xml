<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="50dp"
    android:paddingTop="50dp">

    <RelativeLayout
        android:id="@+id/rltCover"
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:background="@drawable/corner"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dm_20dp"
        android:paddingRight="@dimen/dm_20dp"
        android:paddingTop="@dimen/dm_20dp">

        <EditText
            android:id="@+id/edtSearch"
            style="@style/edt_gray_stroke_register_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/dm_20dp"
            android:hint="@string/search"
            android:imeOptions="actionDone"
            android:singleLine="true" />

        <ListView
            android:id="@+id/lvSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtSearch"
            android:background="@color/white"
            android:divider="@color/gray_stroke"
            android:dividerHeight="@dimen/dm_1dp"
            android:scrollbars="none">

        </ListView>


    </RelativeLayout>
</LinearLayout>